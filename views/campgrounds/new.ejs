<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-lg-6 offset-lg-3">
            <form class="needs-validation" action="/campgrounds" method="post" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title: </label>
                    <input id="title" class="form-control" name="campground[title]" required  autocomplete="off">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location: </label>
                    <input id="location" class="form-control" name="campground[location]" required autocomplete="off">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea id="description" class="form-control" name="campground[description]" required autocomplete="off"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image file(s): </label>
                    <input type="file" name="image" id="image" required autocomplete="off" multiple>
                </div>
                <!-- <div class="mb-3">
                    <label for="location" class="form-label">Image URL: </label>
                    <input id="location" class="form-control" name="campground[image]" required autocomplete="off">
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price ($): </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00"
                            required autocomplete="off">
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>