<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%=camp.title%>
        </h1>
        <div class="col-lg-6 offset-lg-3">
            <form class="needs-validation" action="/campgrounds/<%= camp._id%>?_method=put" method="post" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title: </label>
                    <input id="title" class="form-control" name="campground[title]" value="<%= camp.title%>" required autocomplete="off">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location: </label>
                    <input id="location" class="form-control" name="campground[location]" value="<%= camp.location%>" required autocomplete="off">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea id="description" class="form-control"
                        name="campground[description]" required><%= camp.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Choose your image(s) to upload...</label>
                    <input type="file" class="form-control" name="image" id="image" autocomplete="off" multiple>
                </div>
                <!-- <div class="mb-3">
                    <label for="location" class="form-label">Image URL: </label>
                    <input id="location" class="form-control" name="campground[image]" value="<%= camp.image%>" required autocomplete="off">
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price ($): </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" class="form-control" name="campground[price]"
                            value="<%= camp.price%>" required  autocomplete="off">
                    </div>
                </div>
                <div class="mb-3">
                    <% camp.images.forEach(function(img, i) { %>
                        <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }); %>
                </div> 
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Update</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id%>">Back to Campground</a>
        </div>
    </div>

